    TABLE_NAME,
    COLUMN_NAME,
    DATA_TYPE,
    CHARACTER_MAXIMUM_LENGTH,
    IS_NULLABLE
FROM INFORMATION_SCHEMA.COLUMNS 
WHERE TABLE_NAME IN (
    'Mae_Persona', 'Mae_PersonaJuridica', 'Mae_CompaniaSeguros',
    'Tip_Rol', 'Tip_TipoProveedor', 'Mae_Proveedor', 'Mae_Sucursal',
